pipeline {
    agent {
        docker {
            image 'python:3.11-alpine'   
            args '-u root'               
        }
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Run Python Script') {
            steps {
                sh 'python3 test.py'
            }
        }
    }

    post {
        success {
            echo " Build finished successfully!"
        }
        failure {
            echo " Build failed. Check logs."
        }
    }
}
